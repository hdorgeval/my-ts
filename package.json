{
  "name": "my-ts",
  "version": "0.0.0-semantically-released",
  "description": "fluent API for TypeScript",
  "main": "build/my.js",
  "typings": "build/my.d.ts",
  "scripts": {
    "precommit": "npm run lint && npm test",
    "commit": "git-cz",
    "pretest": "tsc",
    "test": "jest --runInBand --coverage --verbose",
    "preupdate:all": "rimraf ./node_modules",
    "update:all": "npm run update:cli && npm run update:packages && npm run update:types",
    "update:packages": "npm install --save typescript@latest && npm install --save-dev jest@latest tslint@latest semantic-release@latest commitizen@latest cz-conventional-changelog@latest",
    "update:types": "npm install --save-dev @types/jest @types/node",
    "update:cli": "npm install -g typescript@latest jest@latest tslint@latest rimraf@latest semantic-release-cli@latest commitizen@latest cz-conventional-changelog@latest",
    "update:check": "npm outdated",
    "update:npm": "npm -v && npm install -g npm@latest && npm -v",
    "lint": "tslint 'src/**/*.ts'",
    "build": "rimraf ./build  && tsc -p tsconfig.npm-pack.json --listEmittedFiles && jest --config=jestconfig.npm-pack.json",
    "package": "rimraf ./package && rm -f my*.tgz && npm pack",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "author": "Henri d'Orgeval",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "19.2.3",
    "@types/node": "7.0.18",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.0.0",
    "jest": "20.0.3",
    "semantic-release": "6.3.6",
    "tslint": "5.2.0"
  },
  "dependencies": {
    "typescript": "2.3.2"
  },
  "engines": {
    "node": ">=7.0.8",
    "npm": ">=4.2.0"
  },
  "jest": {
    "roots": [
      "./src/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hdorgeval/my-ts.git"
  },
  "keywords": [
    "fluent",
    "API",
    "TypeScript",
    "library"
  ],
  "bugs": {
    "url": "https://github.com/hdorgeval/my-ts/issues"
  },
  "homepage": "https://github.com/hdorgeval/my-ts#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
