{
    "roots": [
      "./src/"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testMatch": ["**/*.spec.(ts|tsx)"],
    "moduleFileExtensions": ["ts","tsx","js"],
    "moduleDirectories": ["node_modules", "src"],
    "mapCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.interface.js",
      "!src/**/*.interface.ts",
      "!src/**/*.spec.ts",
      "!src/**/*.spec.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
}
